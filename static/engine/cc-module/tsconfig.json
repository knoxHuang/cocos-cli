{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "es2022",
        "module": "CommonJS",
        "inlineSourceMap": true,
        "inlineSources": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "experimentalDecorators": true,
        "lib": [
            "DOM",
            "esnext"
        ],
        "rootDir": "./",
        "outDir": "./",
        "declaration": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "./*.ts"
    ],
    "exclude": [
        "./*.js"
    ]
}